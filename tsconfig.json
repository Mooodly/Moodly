{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "remove",
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "paths": {
      "@": [
        "src/index.ts"
      ],
      "@app": [
        "src/app/index.ts"
      ],
      "@processes": [
        "src/processes/index.ts"
      ],
      "@pages": [
        "src/pages/index.ts"
      ],
      "@widgets": [
        "src/widgets/index.ts"
      ],
      "@features": [
        "src/features/index.ts"
      ],
      "@entities": [
        "src/entities/index.ts"
      ],
      "@shared": [
        "src/shared/index.ts"
      ],
      "@components": [
        "src/components/index.ts"
      ],
      "@/*": [
        "src/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@processes/*": [
        "src/processes/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@widgets/*": [
        "src/widgets/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@env": [
        "node_modules/react-native-dotenv"
      ]
    }
  },
  "include": [
    "src/**/*",
    "nativewind-env.d.ts",
    "./.env.d.ts",
    "react-native-textinput-extensions.d.ts",
    "hot-updater.config.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}